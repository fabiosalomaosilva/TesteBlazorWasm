@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <MudAppBar Color="Color.Primary" Fixed="false">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
            <MudSpacer />
            <MudText Typo="Typo.subtitle1" Class="px-3 d-sm-none d-md-flex">Alex Kid</MudText>
            <MudMenu >
                <ActivatorContent>
                    <MudAvatar Image="alexKid.png" />
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem>Perfil</MudMenuItem>
                    <MudMenuItem>Configurações</MudMenuItem>
                    <MudMenuItem>Sair</MudMenuItem>
                </ChildContent>
            </MudMenu>
        </MudAppBar>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
